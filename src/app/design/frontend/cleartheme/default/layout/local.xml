<layout version="0.1.0">
    
    <default>
        <reference name="head">
            <!-- Removes default styles, then adds css files per module -->
<!--            <action method="removeItem"><type>skin_css</type><name>css/styles.css</name></action>-->
            <action method="removeItem"><type>skin_css</type><name>css/widgets.css</name></action>
            <action method="removeItem"><type>skin_css</type><name>css/print.css</name></action>

            <action method="addCss"><stylesheet>css/page/reset.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/page.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/header.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/nav.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/footer.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/buttons.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/clears.css</stylesheet></action>
            
            <!-- Widgets -->
            <!-- <action method="addCss"><stylesheet>css/widgets.css</stylesheet></action> -->
            
            <!-- Print -->
            <action method="addCss"><stylesheet>css/print.css</stylesheet><params>media="print"</params></action>
            
            <!-- Different css files per IE version -->
            <action method="removeItem"><type>skin_css</type><name>css/styles-ie.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/ie/ie8.css</name><params/><if>IE 8</if></action>
            <action method="addItem"><type>skin_css</type><name>css/ie/ie9.css</name><params/><if>IE 9</if></action>
            
            <!-- Removes not used fixes for IE -->
            <action method="removeItem"><type>js</type><name>lib/ds-sleight.js</name></action>
            <action method="removeItem"><type>skin_js</type><name>js/ie6.js</name></action>
         </reference>
    </default>
    
    <print>
        <reference name="head">
            <!-- Removes default styles, then adds css files per module -->
<!--            <action method="removeItem"><type>skin_css</type><name>css/styles.css</name></action>-->
            <action method="removeItem"><type>skin_css</type><name>css/widgets.css</name></action>
            <action method="removeItem"><type>skin_css</type><name>css/print.css</name></action>

            <action method="addCss"><stylesheet>css/page/reset.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/page.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/header.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/nav.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/footer.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/buttons.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/page/clears.css</stylesheet></action>
            
            <!-- Widgets -->
            <!-- <action method="addCss"><stylesheet>css/widgets.css</stylesheet></action> -->
            
            <!-- Print -->
            <action method="addCss"><stylesheet>css/print.css</stylesheet><params>media="print"</params></action>
            
            <!-- Different css files per IE version -->
            <action method="removeItem"><type>skin_css</type><name>css/styles-ie.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/ie/ie8.css</name><params/><if>IE 8</if></action>
            <action method="addItem"><type>skin_css</type><name>css/ie/ie9.css</name><params/><if>IE 9</if></action>
            
            <!-- Removes not used fixes for IE -->
            <action method="removeItem"><type>js</type><name>lib/ds-sleight.js</name></action>
            <action method="removeItem"><type>skin_js</type><name>js/ie6.js</name></action>
         </reference>
    </print>
    
